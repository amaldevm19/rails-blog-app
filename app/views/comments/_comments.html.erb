<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="card">
        <div class="card-body">
            <strong><%= comment.username %></strong>: <%= comment.body %>
        </div>
        <%= link_to '[X]', [comment.post, comment], :method => :delete, data: {confirm: 'Are you sure?'}, :class=>'btn btn-small btn-danger' %>
    </div>
<% end%>